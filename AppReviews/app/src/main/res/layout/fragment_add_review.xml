<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#738070">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#3A4038">


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_title"
            android:hint="@string/hint_application_title"
            android:textColor="#E7FFDF"
            android:textColorHint="#738070"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="25dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/new_stars"
            android:hint="@string/hint_stars_earned"
            android:textColor="#E7FFDF"
            android:textColorHint="#738070"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/new_title"
            android:layout_alignLeft="@+id/new_title"
            android:layout_alignStart="@+id/new_title" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/new_summary"
            android:hint="@string/hint_application_summary"
            android:textColor="#E7FFDF"
            android:textColorHint="#738070"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/new_stars"
            android:layout_alignLeft="@+id/new_stars"
            android:layout_alignStart="@+id/new_stars" />
    </RelativeLayout>

</LinearLayout>